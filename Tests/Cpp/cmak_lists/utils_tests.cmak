cmake_minimum_required(VERSION 3.10)
project(arabicwhisper_utils_tests)

# Set C++ standard
set(CMAKE_CXX_STANDARD 17)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

# Include directories
include_directories(../../../Sources/faster_whisper/include)

# Find required packages
find_package(ZLIB REQUIRED)

# Create test executable for utils tests
add_executable(
    test_utils
    ../utils_tests.cpp
    # Note: utils.cpp is mainly utility functions, tests use mock implementations
)

# Link libraries for test
target_link_libraries(
    test_utils
    ${ZLIB_LIBRARIES}
    m  # math library
)

# Enable testing
enable_testing()

# Add the test
add_test(NAME utils_test COMMAND test_utils)

# Print instructions
message(STATUS "To run utils tests:")
message(STATUS "  mkdir build && cd build")
message(STATUS "  cp ../utils_tests.cmak ./CMakeLists.txt")
message(STATUS "  cmake .")
message(STATUS "  make")
message(STATUS "  ./test_utils")
message(STATUS "  OR: make test")