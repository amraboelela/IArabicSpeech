cmake_minimum_required(VERSION 3.10)
project(arabicwhisper_audio_tests)

# Set C++ standard
set(CMAKE_CXX_STANDARD 17)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

# Include directories
include_directories(../../../Sources/faster_whisper/include)
include_directories(../../../Sources/faster_whisper/whisper)

# Find required packages
find_package(ZLIB REQUIRED)

# Create test executable for audio processing tests
add_executable(
    test_audio
    ../audio_tests.cpp
    ../../../Sources/faster_whisper/audio.cpp
    ../../../Sources/faster_whisper/whisper/whisper_audio.cpp
)

# Link libraries for test
target_link_libraries(
    test_audio
    ${ZLIB_LIBRARIES}
    m  # math library
)

# Enable testing
enable_testing()

# Add the test
add_test(NAME audio_test COMMAND test_audio)

# Print instructions
message(STATUS "To run audio processing tests:")
message(STATUS "  mkdir build && cd build")
message(STATUS "  cp ../audio_tests.cmak ./CMakeLists.txt")
message(STATUS "  cmake .")
message(STATUS "  make")
message(STATUS "  ./test_audio")
message(STATUS "  OR: make test")
